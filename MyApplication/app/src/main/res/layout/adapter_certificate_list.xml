<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dip"
    android:background="#F1F1F1"
    android:clickable="true"
    android:gravity="center|left"
    android:orientation="vertical"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/card_background">

        <View
            android:id="@+id/sideBar"
            android:layout_width="4dip"
            android:layout_height="match_parent"
            android:layout_marginRight="1dip"
            android:background="#8FE489" />

        <TextView
            android:id="@+id/txt_Child_Name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:hint="Child Name"
            android:maxWidth="250dip"
            android:textSize="10sp"

            />

        <TextView
            android:id="@+id/txt_Child_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Child_Name_title"
            android:layout_marginLeft="10dip"
            android:hint="Child Name"
            android:maxWidth="250dip"

            android:textSize="17sp"

            />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:hint="Date"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/txt_Father_Name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Child_Name"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="3dip"

            android:hint="Father Name"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_Father_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Father_Name_title"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="3dip"
            android:hint="Father Name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_Reg_No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Father_Name"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:hint="Registration Number"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>